service cloud.firestore {
  match /databases/{database}/documents {
    // Relawan database.
    match /r/{userId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid == userId;
    }
 
    // Referral codes.
    match /c/{code} {
      allow read: if request.auth.uid != null;
    }

    // Upserts.
    match /u/{imageId} {
      allow list: if request.query.limit <= 10 &&
                     (request.auth.uid == resource.data.uploader.uid || 
                      get(/databases/$(database)/documents/r/$(request.auth.uid)).data.depth < 2
                     );
    }
  }
}